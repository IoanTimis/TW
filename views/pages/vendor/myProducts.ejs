<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/general/head'); %>
</head>
<body class="container">

<header>
    <%- include('../../partials/general/header'); %>
</header>

<main>
  <button type="button" class="btn btn-primary addProductBtn">
    Adauga produs
  </button>

  <div class="jumbotron">
    <p>Produse: </p>
    <ul class="ulProducts">
      <% products.forEach(function(product) { %>
        <li class="liProduct" data-id="<%= product.id %>">
          <strong><%= product.name %></strong>,
          pret: <span><%= product.price %></span>
          <button class="btn editProductBtn" data-id="<%=product.id%>">Edit</button>
          <button class="btn deleteProductBtn" data-id="<%=product.id%>">Delete</button>
        </li>
      <% }); %>
    </ul>
  </div>

  <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productForm">
                  <input type="hidden" name="csrf_token" value="<%= csrf_token %>">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nume</label>
                        <input type="text" class="form-control" id="name" placeholder="Nume produs" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Preț</label>
                        <input type="text" class="form-control" id="price" placeholder="Preț" name="price" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="productForm" class="btn btn-primary"></button>
            </div>
        </div>
    </div>
</div>


</main>

  <%- include('../../partials/general/footer'); %>

</body>
</html>