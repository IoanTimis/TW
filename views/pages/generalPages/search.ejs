<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/general/css/search.css">
    <%- include('../../partials/general/head'); %>
</head>
<body>

    <header>
        <%- include('../../partials/general/header'); %>
    </header>

    <main class="container">

        <div class="search-container">
            <h1>CAUTĂ PRODUSE</h1>

            <form action="/search-results" method="GET" class="search-form">
                <div class="form-group">
                    <input class="form-control" name="search" type="search" placeholder="Caută un produs..." aria-label="Search">
                </div>
                <div class="filter-group">
                    <label for="maxPrice">Preț Maxim:</label>
                    <select id="maxPrice" name="maxPrice">
                        <option value="empty">Selectează</option>
                        <option value="500">500 lei</option>
                        <option value="1000">1000 lei</option>
                        <option value="1500">1500 lei</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-search">Caută</button>
            </form>
        </div>

        <div class="results-container">
            <h2>REZULTATE</h2>
            <div class="results-grid">
                <% products.forEach(function(product) { %>
                <div class="product-item" style="background-image: url('<%= product.image %>'); background-size: cover;">
                    <h3 class="product-title"><%= product.name %></h3>
                    <p class="product-price"><%= product.price %> lei</p>
                </div>
                <% }); %>
            </div>
        </div>

    </main>

    <div style="background-color: #5e493a; margin-top: 3rem;">
        <div class="pre-footer">
            <p>Livrare gratuită peste 70 de lei</p>
            <p>Produse Originale</p>
            <p>100% Siguranță</p>
            <p>Oferte și promoții</p>
        </div>
    </div>

    <%- include('../../partials/general/footer'); %>

</body>
</html>
